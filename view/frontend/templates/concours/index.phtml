	// Fonction utilitaire pour obtenir les coordonn√©es des √©v√©nements de souris et de touche
	function getEventPosition(e) {
			if (e.touches) {
					return {
							x: e.touches[0].clientX,
							y: e.touches[0].clientY
					};
			} else {
